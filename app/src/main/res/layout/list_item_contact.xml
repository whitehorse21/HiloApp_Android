<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <com.hiloipa.app.hilo.ui.widget.RalewayTextView
        android:id="@+id/rowNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_margin="16dp"
        android:textSize="16sp"
        app:textFont="medium"
        tools:text="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- needed to grab the focus from edit text -->
        <LinearLayout
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <com.hiloipa.app.hilo.ui.widget.RalewayEditText
            android:id="@+id/searchField"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:layout_height="45dp"
            android:background="@drawable/gray_border_rect"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:drawableRight="@drawable/ic_action_down"
            android:drawableEnd="@drawable/ic_action_down"
            android:drawableLeft="@drawable/ic_action_search_bold"
            android:drawableStart="@drawable/ic_action_search_bold"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:hint="@string/search"/>

        <Spinner
            android:id="@+id/searchSpinner"
            android:layout_below="@id/searchField"
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="0dp"/>

        <!-- Search result layout -->
        <FrameLayout
            android:id="@+id/searchResultLayout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_border_rect"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                    android:id="@+id/searchResultLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    tools:text="Search result"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/completeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:background="@drawable/rectangle_orange_rounded"
                    android:textColor="@android:color/white"
                    app:buttonFont="bold"
                    android:text="@string/complete" />

                <ImageButton
                    android:id="@+id/deleteBtn"
                    android:contentDescription="@string/delete"
                    style="@style/Base.Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_delete"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>