<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.hiloipa.app.hilo.ui.widget.RalewayButton
            android:id="@+id/assignAsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_border_rect"
            android:drawableEnd="@drawable/ic_action_down"
            android:drawableRight="@drawable/ic_action_down"
            android:gravity="start|center_vertical"
            android:hint="@string/assign_as"
            android:lines="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/assignAsSpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent" />

        <com.hiloipa.app.hilo.ui.widget.RalewayButton
            android:id="@+id/assignToBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_border_rect"
            android:drawableEnd="@drawable/ic_action_down"
            android:drawableRight="@drawable/ic_action_down"
            android:gravity="start|center_vertical"
            android:hint="@string/assign_to"
            android:lines="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/assignToSpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent" />

        <com.hiloipa.app.hilo.ui.widget.RalewayButton
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:background="@drawable/rectangle_orange_rounded"
            android:minWidth="130dp"
            android:text="@string/submit"
            android:textColor="@android:color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>
