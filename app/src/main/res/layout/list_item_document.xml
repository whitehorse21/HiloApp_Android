<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="40dp">

    <com.hiloipa.app.hilo.ui.widget.RalewayTextView
        android:id="@+id/documentTitleLabel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="@string/document_title" />

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <com.hiloipa.app.hilo.ui.widget.RalewayTextView
        android:id="@+id/uploadDateLabel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="@string/upload_date" />

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <com.hiloipa.app.hilo.ui.widget.RalewayTextView
        android:id="@+id/actionLabel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="@string/action" />
</TableRow>