<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/img_login_bg"
    tools:context="com.hiloipa.app.hilo.ui.auth.RestorePasswordFragment">

    <com.hiloipa.app.hilo.ui.widget.RalewayButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_margin="16dp"
        android:layout_height="35dp"
        android:drawablePadding="-20dp"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_navigation_back_white"
        android:drawableStart="@drawable/ic_navigation_back_white"
        android:textColor="@android:color/white"
        android:text="@string/back"
        android:background="@drawable/rectangle_gray_trasparent_rounded"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_hilo_white"
            android:contentDescription="@string/app_name" />

        <com.hiloipa.app.hilo.ui.widget.RalewayEditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/HiloET"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="@string/email"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp"/>

        <com.hiloipa.app.hilo.ui.widget.RalewayButton
            android:id="@+id/resetPasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rectangle_orange_rounded"
            android:textColor="@android:color/white"
            app:buttonFont="bold"
            android:text="@string/submit" />
    </LinearLayout>
</RelativeLayout>
