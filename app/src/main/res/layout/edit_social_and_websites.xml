<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="7dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/socialAndWebsitesToggleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_contact_btn"
                android:textColor="@drawable/edit_contact_text"
                android:text="@string/social_and_websites"
                android:gravity="start|center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableRight="@drawable/edit_contact_icon"
                android:drawableEnd="@drawable/edit_contact_icon"
                app:buttonFont="bold"/>

            <LinearLayout
                android:id="@+id/socialAndWebsitesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="16dp"
                android:orientation="vertical">

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/facebookPersonalField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:inputType="textUri"
                    android:imeOptions="actionNext"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/facebook_personal"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/facebookBusinessField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/facebook_work"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/twitterField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/twitter"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/instagramField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/instagram"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/pinterestField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/pinterest"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/periscopeField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/periscope"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/linkedInField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/linkedin"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/snapChatField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/snap_chat"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/vineField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/vine"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/tumblrField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/tumblr"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/youTubeField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textUri"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/youtube"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/googlePlusField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
