<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            
            <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                android:id="@+id/templateTitleLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:text="Template title"/>

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/previewTemplateBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:singleLine="true"
                android:lines="1"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:text="@string/preview_link"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>