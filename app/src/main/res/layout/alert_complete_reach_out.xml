<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/completeReachOutBackBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:text="@string/complete_reach_out"
                android:drawablePadding="-40dp"
                android:textSize="17sp"
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:background="?selectableItemBackground"
                android:drawableStart="@drawable/ic_action_back"
                android:drawableLeft="@drawable/ic_action_back"/>

            <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                android:id="@+id/completeReachOutTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                app:textFont="semiBold"
                android:text="Yumi Sunday"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="16dp">

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/leadTempBtn"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_action_down"
                    android:drawableEnd="@drawable/ic_action_down"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:hint="@string/lead_temp"/>

                <Spinner
                    android:id="@+id/leadTempSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0dp"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/updatePipelinePositionBtn"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_action_down"
                    android:drawableEnd="@drawable/ic_action_down"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:hint="@string/update_pipeline_position"/>

                <Spinner
                    android:id="@+id/updatePipelinePositionSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0dp"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/logReachOutTypeBtn"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_action_down"
                    android:drawableEnd="@drawable/ic_action_down"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:hint="@string/log_reach_out_type"/>

                <Spinner
                    android:id="@+id/logReachOutTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0dp"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/logReachOutCommentsField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/log_reach_out_comments"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/scheduleNextFollowUpBtn"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_action_down"
                    android:drawableEnd="@drawable/ic_action_down"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:hint="@string/schedule_next_follow_up"/>

                <Spinner
                    android:id="@+id/scheduleNextFollowUpSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0dp"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/contactTypeBtn"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_action_down"
                    android:drawableEnd="@drawable/ic_action_down"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:hint="@string/contact_type"/>

                <Spinner
                    android:id="@+id/contactTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0dp"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/completeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_orange_rounded"
                    android:minWidth="150dp"
                    style="@style/Base.Widget.AppCompat.ActionButton"
                    android:text="@string/complete"
                    android:textColor="@android:color/white"
                    app:buttonFont="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>