<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/contactInfoToggleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_contact_btn"
                android:textColor="@drawable/edit_contact_text"
                android:text="@string/contact_info"
                android:gravity="start|center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableRight="@drawable/edit_contact_icon"
                android:drawableEnd="@drawable/edit_contact_icon"
                app:buttonFont="bold"/>

            <LinearLayout
                android:id="@+id/contactInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="16dp"
                android:orientation="vertical">

                <com.hiloipa.app.hilo.ui.widget.RalewayButton
                    android:id="@+id/titleField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_action_down"
                    android:drawableEnd="@drawable/ic_action_down"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:hint="@string/title"/>

                <Spinner
                    android:id="@+id/titleSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="0dp"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/firstNameField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:inputType="textPersonName|textCapWords"
                    android:imeOptions="actionNext"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/first_name"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/lastNameField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:inputType="textPersonName|textCapWords"
                    android:imeOptions="actionNext"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/last_name"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/email"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/emailField1"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textEmailAddress"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/email_2"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/emailField2"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textEmailAddress"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/email_3"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/emailField3"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="textEmailAddress"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/email_4"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/phoneNumberField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="phone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/phone_number"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/cellPhoneField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="phone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/cell_phone"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/workPhoneField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:inputType="phone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/work_phone"/>

                <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                    android:id="@+id/homePhoneField"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:inputType="phone"
                    android:layout_height="45dp"
                    android:background="@drawable/selectable_border_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:hint="@string/home_phone"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>