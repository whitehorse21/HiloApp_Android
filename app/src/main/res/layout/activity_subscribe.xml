<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hiloipa.app.hilo.ui.more.account.SubscribeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:navigationIcon="@drawable/ic_action_back_white"
        android:background="@color/colorPrimary">

        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/subscribe"
            app:textFont="medium"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hiloipa.app.hilo.ui.widget.RalewayButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:background="@drawable/rectangle_top_rounded_orange"
                        android:textColor="@android:color/white"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/choose_your_plan"
                        style="@style/Base.Widget.AppCompat.ActionButton"/>

                    <!-- Silver plan -->
                    <com.hiloipa.app.hilo.ui.widget.PaymentPlanView
                        android:tag="Silver"
                        android:id="@+id/silverPlan"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:planName="Silver Plan"
                        app:planPrice="$19.99 / month"
                        android:orientation="vertical"
                        app:selected="true">

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/all_hilo_features_amp_functions"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp" />

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/_30_days_free_trial"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp" />

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/up_to_5000_contacts"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/up_to_3000_emails_month"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/full_hilo_support"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"/>
                    </com.hiloipa.app.hilo.ui.widget.PaymentPlanView>

                    <!-- Gold plan -->
                    <com.hiloipa.app.hilo.ui.widget.PaymentPlanView
                        android:tag="Gold"
                        android:id="@+id/goldPlan"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:planName="Gold Plan"
                        app:planPrice="$39.99 / month"
                        android:orientation="vertical">

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/all_hilo_features_amp_functions"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp" />

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/_30_days_free_trial"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp" />

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/up_to_15000_contacts"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/up_to_12000_emails_month"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/full_hilo_support"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_checkmark_cirlce"
                            android:drawableStart="@drawable/ic_checkmark_cirlce"
                            android:gravity="center_vertical"
                            android:text="@string/online_team_training"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"/>
                    </com.hiloipa.app.hilo.ui.widget.PaymentPlanView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/makePaymentBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:minWidth="140dp"
                android:background="@drawable/rectangle_orange_rounded"
                android:singleLine="true"
                android:lines="1"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:text="@string/make_payment"/>

            <com.hiloipa.app.hilo.ui.widget.RalewayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/plans_description"/>

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/privacyBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:singleLine="true"
                android:text="@string/privacy_policy"/>

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/termsBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:singleLine="true"
                android:text="@string/terms_of_service"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@id/toolbar"/>
</RelativeLayout>
