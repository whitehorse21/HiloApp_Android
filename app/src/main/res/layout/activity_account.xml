<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hiloipa.app.hilo.ui.more.account.AccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:navigationIcon="@drawable/ic_action_back_white"
        android:background="@color/colorPrimary">

        <com.hiloipa.app.hilo.ui.widget.RalewayTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/my_account"
            app:textFont="medium"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hiloipa.app.hilo.ui.widget.RalewayButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:background="@drawable/rectangle_top_rounded_orange"
                        android:textColor="@android:color/white"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/account_details"
                        style="@style/Base.Widget.AppCompat.ActionButton"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/firstNameField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/first_name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapWords"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/lastNameField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/last_name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapWords"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/emailField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/email"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/hiloEmailField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/hilo_bcc_email"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/phoneNumberField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/phone_number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="phone"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/personalUrlField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/personal_url"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textUri"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/businessUrlField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/personal_url_business_site"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textUri"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/solutionToolUrlField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/solution_tool_link"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textUri"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/titleField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/title"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayEditText
                        android:id="@+id/companyField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:background="@drawable/selectable_border_rect"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/company"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionDone"
                        android:inputType="textCapWords"/>

                    <com.hiloipa.app.hilo.ui.widget.RalewayButton
                        android:id="@+id/updateAccountBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="140dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="16dp"
                        android:background="@drawable/rectangle_orange_rounded"
                        android:singleLine="true"
                        android:lines="1"
                        style="@style/Base.Widget.AppCompat.ActionButton"
                        android:textColor="@android:color/white"
                        android:text="@string/update_account"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.hiloipa.app.hilo.ui.widget.RalewayButton
                android:id="@+id/managePaymentPlanBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/rectangle_orange_rounded"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:singleLine="true"
                android:lines="1"
                android:textColor="@android:color/white"
                android:text="@string/manage_payment_plan"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@id/toolbar"/>
</RelativeLayout>
